<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fit.Natic.ActivityPage"
             xmlns:local="clr-namespace:Fit.Natic;assembly=Fit.Natic"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms">
    <!--Pages can be added as references or inline-->
     <StackLayout>
         <Label Text="Activity Stats" HorizontalOptions="Center" VerticalOptions="Start" TextColor="#707070" FontFamily="Quicksand-Bold.ttf#Quicksand-Bold"/>
         <Button Text="Log Sleep" TextColor="White" BackgroundColor="#D97D54" Clicked="LogSleep" FontFamily="Quicksand-Bold.ttf#Quicksand-Bold"></Button>
     </StackLayout>
</ContentPage>
